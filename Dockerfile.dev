# Development Dockerfile for Nuxt 3
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies for better development experience
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy project files
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev"]
